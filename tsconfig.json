{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "strict": true,
    "types": ["node", "mocha"],
    "typeRoots": ["./node_modules/@types", "./src/types/global.d.ts"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["src/**/__tests__", "src/tests", "dist"]
}
